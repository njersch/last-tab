{
  "manifest_version": 3,
  "name": "Last Tab",
  "version": "1.0",
  "description": "Quickly return to last active tab and close stale tabs.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "windows",
    "storage"
  ],
  "commands": {
    "switch-to-last-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
          "mac": "MacCtrl+B"
        },
        "description": "Switch to the last active tab"
      },
    "close-tabs-without-recent-activity": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "MacCtrl+X"
      },
      "description": "Close tabs without recent activity"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
} 